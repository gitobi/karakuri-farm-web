{
    "parser": "babel-eslint",
    "extends": [
      "airbnb"
    ],
    "plugins": [
        "react",
        "jsx-a11y",
        "import",
        "flowtype"
    ],
    "rules": {
      "lines-between-class-members": 0,
      "flowtype/use-flow-type": 1,
      "flowtype/define-flow-type": 1,
      "flowtype/valid-syntax": 1
    },
    "settings": {
      "import/resolver": {
        "node": {
          "moduleDirectory": ["node_modules", "/"]
        }
      },
      "flowtype": {
        "onlyFilesWithFlowAnnotation": true
      }
    }
}
